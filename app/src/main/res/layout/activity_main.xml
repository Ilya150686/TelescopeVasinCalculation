<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/countOut"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="391dp"
        android:layout_height="95dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="КОЛИЧЕСТВО МЕСЯЦЕВ НАКОПЛЕНИЯ НА ТЕЛЕСКОП:"
        android:textColor="#008ACA"
        android:textSize="26sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.056" />

    <TextView
        android:id="@+id/creditTermOut"
        android:layout_width="387dp"
        android:layout_height="96dp"

        android:background="#F1EAE2"
        android:gravity="center"
        android:text="Здесь будет отражена информация числа месяцев накопления на телескоп"
        android:textColor="#008ACA"
        android:textColorHint="#7FB0C6"
        android:textSize="19sp"
        app:layout_constraintTop_toBottomOf="@id/textView"
        tools:layout_editor_absoluteX="16dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="391dp"
        android:layout_height="95dp"
        android:gravity="center"
        android:text="ВЫПИСКА ПО ЕЖЕМЕСЯЧНЫМ НАКОПЛЕНИЯМ:"
        android:textColor="#008ACA"
        android:textSize="26sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/creditTermOut"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/monthlyPaymentsOut"
        android:layout_width="386dp"
        android:layout_height="239dp"
        android:background="#F1EAE2"
        android:gravity="center"
        android:textColor="#008ACA"
        android:textColorHint="#7FB0C6"
        app:layout_constraintTop_toBottomOf="@id/textView2"
        android:text="Здесь будет отображена информация по ежемесячным накоплениям на телескоп"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="12dp"
        tools:layout_editor_absoluteY="352dp" />



</androidx.constraintlayout.widget.ConstraintLayout>